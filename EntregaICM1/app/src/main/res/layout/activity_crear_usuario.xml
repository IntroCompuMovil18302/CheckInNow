<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearUsuarioActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ringbell"
        android:scaleType="centerCrop"
        android:alpha="0.6"/>
    <ImageView
        android:id="@+id/Logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        />
    <EditText
        android:id="@+id/NombresRegistro"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Nombres"
        android:layout_below="@+id/Logo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/ApellidosRegistros"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Apellidos"
        android:layout_below="@+id/NombresRegistro"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/CorreoRegistro"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Corrreo"
        android:layout_below="@+id/ApellidosRegistros"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/Contase単aRegistro"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Contrase単a"
        android:layout_below="@+id/CorreoRegistro"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        />
    <Spinner
        android:id="@+id/spinerPais"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/Contase単aRegistro"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"/>
    <Spinner
        android:id="@+id/spinerCiudad"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/spinerPais"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"/>


    <TextView
        android:id="@+id/FN"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Fecha Nacimiento"
        android:layout_below="@+id/Contase単aRegistro"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/FechaNacimiento"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="DD/MM/AAAA"
        android:layout_below="@+id/spinerPais"
        android:inputType="date"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="20dp"/>
        />

    <Button
        android:id="@+id/CargarImagen"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_account_box"
        android:drawablePadding="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/botonplano"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Cargar Imagen"
        />
    <Button
        android:id="@+id/Siguiente"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:drawableTop="@drawable/flecha_siguiente"
        />


</RelativeLayout>