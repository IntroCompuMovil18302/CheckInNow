<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Noticiaprincipal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@drawable/ringbell" />
    <ImageView
        android:id="@+id/Logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        />


    <Button
        android:id="@+id/filtrarnot"
        android:layout_width="199dp"
        android:layout_height="44dp"

        android:layout_below="@+id/scrollnoticias"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/botonplano"
        android:text="Filtrar" />

    <Button
        android:id="@+id/buscarnot"
        android:layout_width="118dp"
        android:layout_height="35dp"

        android:layout_alignTop="@+id/buscarcamponot"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/buscarcamponot"
        android:background="@drawable/botonplano"
        android:text="Buscar" />

    <EditText
        android:id="@+id/buscarcamponot"
        android:layout_width="201dp"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/scrollnoticias"
        android:layout_below="@+id/textView3not"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="2dp"
        android:singleLine="false"
        android:text="Buscar"
        android:textSize="14sp" />

    <ScrollView
        android:id="@+id/scrollnoticias"
        android:layout_width="336dp"
        android:layout_height="277dp"
        android:layout_below="@+id/buscarnot"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonnotnot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/noticias" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView3not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Noticias"
        android:textSize="30sp" />

</RelativeLayout>