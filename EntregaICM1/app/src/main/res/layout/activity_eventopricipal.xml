<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalificacionActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@drawable/ringbell" />
    <ImageView
        android:id="@+id/Logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        />




    <LinearLayout
        android:id="@+id/BarraBotones"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#B3E5FC">

        <RelativeLayout
            android:id="@+id/BotonHome"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icono"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img1"
                android:gravity="center"
                android:text="Home"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/BotonPerfil"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icono"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img2"
                android:gravity="center"
                android:text="Perfil"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/BotonBuscar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icono"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img3"
                android:gravity="center"
                android:text="Buscar"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/BotonReservas"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icono"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img4"
                android:gravity="center"
                android:text="Reservas"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/BotonCalificacion"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icono"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img5"
                android:gravity="center"
                android:text="Califiacion"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/filtrar"
        android:layout_width="146dp"
        android:layout_height="44dp"

        android:layout_alignEnd="@+id/buscar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/botonplano"
        android:text="Filtrar" />

    <Button
        android:id="@+id/cercaMio3"
        android:layout_width="146dp"
        android:layout_height="44dp"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Logo"
        android:layout_marginBottom="24dp"
        android:background="@drawable/botonplano"
        android:text="Cerca mio" />

    <Button
        android:id="@+id/buscar"
        android:layout_width="118dp"
        android:layout_height="35dp"

        android:layout_alignEnd="@+id/BarraBotones"
        android:layout_below="@+id/BarraBotones"
        android:layout_margin="10dp"
        android:background="@drawable/botonplano"
        android:text="Buscar" />

    <EditText
        android:id="@+id/buscarcampo"
        android:layout_width="201dp"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/BarraBotones"
        android:layout_below="@+id/BarraBotones"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="2dp"
        android:singleLine="false"
        android:text="Buscar"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="336dp"
        android:layout_height="221dp"
        android:layout_below="@+id/buscarcampo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/eventos" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>