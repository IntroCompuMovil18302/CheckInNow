<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Huesped.consultarFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="0dp"
            android:fontFamily="@font/oestrogen"
            android:gravity="center"
            android:text="Consultar lugares"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/enagol"
                android:text="Fecha llegada"
                android:textAlignment="center"
                android:textColor="@color/secondary_text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/enagol"
                android:text="Fecha salida"
                android:textAlignment="center"
                android:textColor="@color/secondary_text"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fehcas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:alpha="0.9"
                android:background="@drawable/bordescurvos"
                android:clickable="true"
                android:focusable="false"
                android:hint="Buscar por fecha..."
                android:maxLines="1"
                android:padding="7dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/fi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:alpha="0.9"
                android:background="@drawable/bordescurvos"
                android:clickable="true"
                android:focusable="false"
                android:hint="Buscar por fecha..."
                android:maxLines="1"
                android:padding="7dp"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fehcas"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/enagol"
            android:text="Lugar"
            android:textAlignment="center"
            android:textColor="@color/secondary_text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gogo"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/enagol"
            android:text="Lugares en: "
            android:textAlignment="center"
            android:textColor="@color/secondary_text"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/gogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/lugartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_marginStart="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.9"
                android:alpha="0.9"
                android:background="@drawable/bordescurvos"
                android:maxLines="1"
                android:padding="7dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/botonfiltrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/textoBuscar"
                android:layout_weight="0.1"
                android:background="@drawable/botonplano"
                android:fontFamily="@font/juiceline"
                android:text="filtrar"
                android:textColor="@color/primary_light"
                android:textSize="15dp" />
        </LinearLayout>

        <ListView
            android:id="@+id/listafiltro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView14"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="0dp" />

    </RelativeLayout>

</FrameLayout>