<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Huesped.ExtraFragment">


        <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="50dp"
                android:fontFamily="@font/oestrogen"
                android:gravity="center"
                android:text="NOticias y eventos "
                android:textColor="@color/primary_text"
                android:textSize="20dp" />




            <Button
                android:id="@+id/botonEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="70dp"
                android:layout_centerInParent="true"
                android:layout_weight="0.1"
                android:layout_alignParentRight="true"
                android:background="@drawable/botonplano"
                android:fontFamily="@font/juiceline"
                android:text="EVENTOS"
                android:textColor="@color/primary_light"
                android:textSize="15dp" />

            <Button
                android:id="@+id/botonNoticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="70dp"
                android:layout_centerInParent="true"
                android:layout_weight="0.1"
                android:layout_alignParentLeft="true"
                android:background="@drawable/botonplano"
                android:fontFamily="@font/juiceline"
                android:text="NOTICIAS"
                android:textColor="@color/primary_light"
                android:textSize="15dp" />


        </RelativeLayout>

    </FrameLayout>