<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anfitrion.AgregarLugarFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.2"
            android:scaleType="fitEnd"
            android:src="@drawable/russian_house" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.2"
            android:scaleType="fitEnd"
            android:src="@drawable/chinese_house" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.2"
            android:scaleType="fitEnd"
            android:src="@drawable/hotel" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/curvos"
                android:padding="30dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/enagol"
                    android:text="Nombre"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editTextnombre"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextnombre"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/enagol"
                    android:text="Tipo"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnertipo"
                    android:layout_alignStart="@+id/editTextnombre"
                    android:fontFamily="@font/enagol"
                    android:text="Valor"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttonUbicion"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/enagol"
                    android:text="Agregar imagen"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageconedor"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/enagol"
                    android:text="Habitaciones"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/valormon"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/enagol"
                    android:text="UbicaciÃ³n"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/buttonUbicion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/botonplano"
                    android:fontFamily="@font/juiceline"
                    android:text="Ubicacion"
                    android:textColor="@color/primary_light"
                    android:textSize="13dp" />

                <LinearLayout
                    android:id="@+id/cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/buttonCam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/buttonGal"
                        android:layout_weight="0.5"
                        android:background="@drawable/botonplano"
                        android:fontFamily="@font/juiceline"
                        android:text="Camara"
                        android:textColor="@color/primary_light"
                        android:textSize="13dp" />

                    <Button
                        android:id="@+id/buttonGal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_alignStart="@+id/textView"
                        android:layout_marginStart="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/botonplano"
                        android:fontFamily="@font/juiceline"
                        android:text="Galeria"
                        android:textColor="@color/primary_light"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imageconedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cont"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imagecam"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/picture" />

                    <ImageView
                        android:id="@+id/imagegal"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignStart="@+id/imagecam"
                        android:layout_alignTop="@+id/imagecam"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/picture" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/habitaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView7"
                    android:layout_alignStart="@+id/textView"
                    android:layout_margin="0dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/menoshab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView6"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/botonplano"
                        android:fontFamily="@font/juiceline"
                        android:text="-"
                        android:textColor="@color/primary_light"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/editTexthab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView4"
                        android:layout_alignStart="@+id/textView"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.6"
                        android:ems="10"
                        android:inputType="number"
                        android:text="1"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/mashab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView6"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/botonplano"
                        android:fontFamily="@font/juiceline"
                        android:text="+"
                        android:textColor="@color/primary_light"
                        android:textSize="13dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/habitaciones"
                    android:layout_alignStart="@+id/textView"
                    android:layout_margin="0dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/enagol"
                    android:text="Camas"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/camas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView8"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="-0dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/menoscam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView6"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/botonplano"
                        android:fontFamily="@font/juiceline"
                        android:text="-"
                        android:textColor="@color/primary_light"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/editTextcamas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView4"
                        android:layout_alignStart="@+id/textView"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.6"
                        android:ems="10"
                        android:inputType="number"
                        android:text="1"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/mascam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView6"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/botonplano"
                        android:fontFamily="@font/juiceline"
                        android:text="+"
                        android:textColor="@color/primary_light"
                        android:textSize="13dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/camas"
                    android:layout_alignStart="@+id/textView"
                    android:layout_margin="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/enagol"
                    android:text="BaÃ±os"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/banos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView9"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="-0dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/menosban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView6"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/botonplano"
                        android:fontFamily="@font/juiceline"
                        android:text="-"
                        android:textColor="@color/primary_light"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/editTextbanos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView4"
                        android:layout_alignStart="@+id/textView"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.6"
                        android:ems="10"
                        android:inputType="number"
                        android:text="1"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/masban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView6"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/botonplano"
                        android:fontFamily="@font/juiceline"
                        android:text="+"
                        android:textColor="@color/primary_light"
                        android:textSize="13dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/esta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/banos"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/enagol"
                    android:text="Estacionamiento"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/esta"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/enagol"
                    android:text="Mascotas"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp" />

                <Switch
                    android:id="@+id/estacionamiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/banos"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/esta" />

                <Switch
                    android:id="@+id/mascotas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/estacionamiento"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/textView11" />

                <Button
                    android:id="@+id/buttonAgregar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mascotas"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/botonplano"
                    android:fontFamily="@font/juiceline"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Agregar"
                    android:textColor="@color/primary_light"
                    android:textSize="13dp" />

                <Spinner
                    android:id="@+id/spinnertipo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textView2"
                    android:entries="@array/tiposlugares" />

                <LinearLayout
                    android:id="@+id/valormon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_alignStart="@+id/textView"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextValor"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@+id/textView4"
                        android:layout_alignStart="@+id/textView"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.8"
                        android:ems="10"
                        android:inputType="number" />

                    <Spinner
                        android:id="@+id/spinnermoneda"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="0.2"
                        android:entries="@array/monedas" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>