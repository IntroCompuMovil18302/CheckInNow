<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Huesped.mapconsulFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.gms.maps.MapView
        android:id="@+id/map2"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="0dp"
            android:fontFamily="@font/oestrogen"
            android:gravity="center"
            android:text="Consultar lugares"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/enagol"
                android:text="Fecha llegada"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/enagol"
                android:text="Fecha salida"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fehcas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/fechaorig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:alpha="0.9"
                android:background="@drawable/bordescurvos"
                android:clickable="true"
                android:focusable="false"
                android:hint="Buscar por fecha..."
                android:maxLines="1"
                android:padding="7dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/fechafin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:alpha="0.9"
                android:background="@drawable/bordescurvos"
                android:clickable="true"
                android:focusable="false"
                android:hint="Buscar por fecha..."
                android:maxLines="1"
                android:padding="7dp"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>